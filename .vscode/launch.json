{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "src/streamlit/src/app.py",
                "--server.port",
                "8501"
            ],
            "env": {
                "DATA_PROVIDER": "LOCAL",
                "DATA_PATH": "${workspaceFolder}/data"
            }
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/streamlit/src",
                    "remoteRoot": "/app/src/"
                }
            ],
            "preLaunchTask": "${input:compose-up}"
        }
    ],
    "inputs": [
        {
            "id": "compose-up",
            "description": "Start Docker Compose",
            "type": "pickString",
            "options": [
                "local-data-debug",
                "remote-data-debug"
            ]
        }
    ]
}
